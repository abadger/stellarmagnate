import asyncio
import sys

from pubmarine import PubPen
from straight.plugin import load
#try:
#    import uvloop
#except ImportError:
#    uvloop = None
#else:
#    asyncio.set_event_loop_policy(uvloop.EventLoopPolicy())

from magnate.dispatcher import Dispatcher
from magnate.ui.api import UserInterface

from magnate.ui import urwid


# entrypoint parses args
# creates a dispatcher
#   dispatcher subscribes to backend update events
# creates a UI
#   passes the dispatcher and pubpen into the UI
#   UI creates windows
# entrypoint starts the event loop
#   dispatcher reacts to events from the backend and commands from the user
#   UI reacts to events from the user and the dispatcher
#
if __name__ == '__main__':
    ### FIXME: Get this from the command line:
    ui_name = 'urwid'

    # Load the requested user interface
    ui_plugins = load('magnate.ui', subclasses=UserInterface)
    for UIClass in ui_plugins:
        if UIClass.__module__.startswith('magnate.ui.{}'.format(ui_name)):
            break
    else:
        print('Unknown user ui: {}'.format(ui_name))

    loop = asyncio.get_event_loop()
    pubpen = PubPen(loop)
    dispatcher = Dispatcher(pubpen)
    ui = UIClass(pubpen)

    ret_code = ui.run()
    sys.exit(ret_code)
